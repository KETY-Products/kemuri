{
  "name": "mock-tool",
  "version": "1.0.0",
  "description": "Mock Tool",
  "scripts": {
    "server": "npm run watch:dist",
    "watch": "run-p watch:**",
    "watch:nunjucks": "onchange 'src/**/*.{njk,twig,html,yml}' 'vars.yml' -- npm run build:html",
    "watch:scss": "onchange 'src/scss/**/*.{scss,sass}' -e 'src/scss/**/_all.scss' -- npm run build:css",
    "watch:js": "tsc --watch",
    "watch:dist": "browser-sync dist --watch",
    "build": "run-s cleanup:dist build:**",
    "build:html": "node bin/build_html.js",
    "build:css": "run-p scss:*",
    "scss:auto_index": "node bin/scss_auto_index.js",
    "scss:compile": "sass src/scss:src/css",
    "build:js": "tsc",
    "cleanup": "run-p cleanup:**",
    "cleanup:dist": "rimraf dist/*"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.14",
    "@types/node": "18.11.7",
    "browser-sync": "^2.27.10",
    "dotenv": "^16.0.3",
    "editorconfig": "^1.0.0",
    "glob": "^8.0.3",
    "js-beautify": "^1.14.6",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.3",
    "onchange": "^7.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.55.0",
    "typescript": "^4.8.4",
    "yaml": "^2.1.3"
  }
}
