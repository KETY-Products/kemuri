{
  "name": "mock-tool",
  "version": "1.0.0",
  "description": "Mock Tool",
  "private": true,
  "bin": {
    "html-builder": "",
    "css-builder": "",
    "js-builder": ""
  },
  "type": "module",
  "dependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "browser-sync": "^2.29.3",
    "chalk": "^5.3.0",
    "cosmiconfig": "^8.3.6",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "js-beautify": "^1.14.9",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "nunjucks": "^3.2.4",
    "rimraf": "^5.0.5",
    "rollup": "^4.1.4",
    "sass": "^1.69.4",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/browser-sync": "^2.27.3",
    "@types/glob": "^8.1.0",
    "@types/js-beautify": "^1.14.2",
    "@types/js-yaml": "^4.0.8",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.7",
    "@types/nunjucks": "^3.2.5",
    "@types/yargs": "^17.0.29",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "tsx": "^3.14.0"
  },
  "scripts": {
    "dev:server": "tsx lib/server.ts",
    "dev:watch": "tsx lib/builder.ts -w",
    "site:build": "tsx lib/builder.ts",
    "site:html-build": "tsx lib/builder/html.ts",
    "site:css-build": "tsx lib/builder/css.ts",
    "site:js-build": "tsx lib/builder/js.ts",
    "site:cleanup": "rimraf public/*",
    "site:cleanup:assets": "run-p mock:cleanup:assets:*",
    "site:cleanup:assets:js": "rimraf public/assets/js/*",
    "site:cleanup:assets:css": "rimraf public/assets/css/*",
    "build": "rollup -c",
    "build:builder": "rollup -i lib/builder.ts -o bin/builder.js -p typescript --format=cjs",
    "build:html-builder": "rollup -i lib/builder/html.ts -o bin/html-builder.js -p typescript --format=cjs",
    "build:css-builder": "rollup -i lib/builder/css.ts -o bin/css-builder.js -p typescript --format=cjs",
    "build:js-builder": "rollup -i lib/builder/js.ts -o bin/js-builder.js -p typescript --format=cjs",
    "build:server": "rollup -i lib/server.ts -o bin/server.js -p typescript --format=cjs"
  }
}
